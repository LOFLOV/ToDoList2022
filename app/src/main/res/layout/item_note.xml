<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/yellow_700"
    android:layout_margin="@dimen/default_margin"
    android:padding="@dimen/small_margin">

    <ImageView
        android:id="@+id/image_note"
        android:src="@drawable/ic_baseline_note_24"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/title_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note 1"
        android:layout_marginHorizontal="@dimen/default_margin"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/image_note"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(discription)"
        android:layout_marginHorizontal="@dimen/default_margin"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/title_note"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_date_create"
        android:layout_width="154dp"
        android:layout_height="19dp"
        android:layout_marginHorizontal="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@+id/image_note"
        app:layout_constraintTop_toBottomOf="@+id/title_note"
        tools:text="date created 02.02.2022" />

</androidx.constraintlayout.widget.ConstraintLayout>